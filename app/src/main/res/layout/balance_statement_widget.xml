<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyt_root_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_black"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/txt_title_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_refresh_black_24dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/weekly_balance_statement"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_refresh_black_24dp" />

    <ImageView
        android:id="@+id/img_chart_widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:contentDescription="@string/image_widget"
        android:padding="5dp" />


</LinearLayout>